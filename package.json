{
  "name": "hosby-cli",
  "version": "0.3.0",
  "description": "A powerful CLI tool for generating and managing database schemas and services for front-end, mobile, and desktop projects",
  "author": "Hosby Team <support@hosby.io>",
  "license": "MIT",
  "homepage": "https://hosby.io",
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/hosby-client/hosby-cli.git"
  },
  "bugs": {
    "url": "https://github.com/hosby-client/hosby-cli/issues"
  },
  "keywords": [
    "cli",
    "frontend",
    "cmd",
    "database",
    "schema",
    "api",
    "typescript",
    "code-generation",
    "ai",
    "claude",
    "openai",
    "typescript",
    "node",
    "chatgpt"
  ],
  "bin": {
    "hosby": "./dist/index.js"
  },
  "type": "module",
  "engines": {
    "node": ">=14.0.0"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc",
    "clean": "rimraf dist",
    "dev": "tsc --watch",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "format": "prettier --write \"**/*.{ts,js,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,js,json,md}\"",
    "check": "npm run lint && npm run typecheck && npm run format:check",
    "prepublishOnly": "npm run clean && npm run build",
    "prepare": "npm run build",
    "release": "npm run check && npm version",
    "pub:beta": "npm publish --tag beta",
    "pub:release": "npm publish"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.60.0",
    "axios": "^1.12.2",
    "commander": "^12.1.0",
    "dotenv": "^16.4.5",
    "glob": "^10.4.5",
    "hosby-ts": "^1.4.3",
    "inquirer": "^9.2.15",
    "node-fetch": "^3.3.2",
    "openai": "^4.57.0",
    "ora": "^8.2.0",
    "ts-morph": "^22.0.0",
    "vite": "^7.1.6"
  },
  "devDependencies": {
    "@types/inquirer": "^9.0.9",
    "@types/node": "^20.12.7",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "eslint": "^8.57.1",
    "prettier": "^3.6.2",
    "rimraf": "^5.0.10",
    "ts-node": "^10.9.1",
    "typescript": "^5.4.5",
    "vitest": "^3.2.4"
  }
}
